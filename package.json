        "@types/react": "^18.0.14",
        "@types/react-dom": "^18.3.0",
        "babel-loader": "^9.1.3",
        "css-loader": "^7.1.2",
        "jest": "^27.4.3",
        "jest-transform-stub": "^2.0.0",
        "less": "^4.1.2",
        "less-loader": "^12.2.0",
        "less-loader": "^12.2.0",
        "node-polyfill-webpack-plugin": "^4.0.0",
        "postcss": "^8.3.9",
        "rimraf": "^5.0.7",
        "rollup": "^2.77.3",
        "rollup-plugin-postcss": "^4.0.1",
        "rollup-plugin-terser": "^7.0.2",
