        "entity relationship model",
        "diagram",
        "editor",
        "flowchart",
        "react-flow",
        "erm",
        "erd"
    ],
    "license": "MIT",
    "author": "Thoren Lederer",
    "homepage": "https://github.com/therealthoren/react-erm-editor#readme",
    "bugs": {
        "url": "https://github.com/therealthoren/react-erm-editor/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/therealthoren/react-erm-editor.git"
    },
    "main": "dist/index.js",
    "files": [
        "./dist"
    ],
    "scripts": {
